backend = "glx";

### GLX backend

glx-no-stencil = true;
glx-copy-from-front = false;
glx-swap-method = "undefined";

### Shadows

# Enabled client-side shadows on windows.
shadow = false;

### Opacity

# Miscellaneous
menu-opacity = 1;
inactive-opacity = 1;
active-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;
alpha-step = 0.06;

# Dim inactive windows
inactive-dim = 0.14;
blur-background-fixed = false;

### Fading

# Fade windows during opacity changes
fading = true;
# The time between steps in a fade in milliseconds
fade-delta = 3;
# Opacity change between steps while fading in
fade-in-step = 0.03;
# Opacity change between steps while fading out
fade-out-step = 0.03;
# Fade windows in/out when opening/closing
no-fading-openclose = true;

### Other

# Try to detect wm windows and mark them as active
mark-wmwin-focused = true;
# Mark all non-wm but override-redirect windows active such as menus
mark-ovredir-focused = true;
# Usually more reliable but depends on a ewmh-compliant wm
use-ewmh-active-win = true;
# Detect rounded corners and treat them as rectangular
detect-rounded-corners = true;

# This prevents opacity being ignored for some apps
detect-client-opacity = true;

# Specify refresh rate of the screen
refresh-rate = 0;

# Set vsync method.
vsync = "opengl-swc";

# Enable DBE painting mode, intended to use with vsync to eliminate tearing.
dbe = false;
# Painting on x composite overlay window
paint-on-overlay = true;

# Limit compton to repaint to boost performances
sw-opti = true;

# Unredirect all windows if a full-screen opaque window is detected
unredir-if-possible = true;
